# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000

# HubSpot OAuth Configuration
CLIENT_ID=your_hubspot_client_id_here
CLIENT_SECRET=your_hubspot_client_secret_here
REDIRECT_URI=http://localhost:3000/auth/callback
TOKEN_URL=https://api.hubapi.com/oauth/v1/token

# Security - Generate a strong 32-character encryption key
ENCRYPTION_KEY=your-32-character-encryption-key-here

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Database Configuration
MONGO_CONNECTION_STRING=mongodb://localhost:27017/hubspot_integration